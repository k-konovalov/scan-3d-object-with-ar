<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000</item>
        <item name="android:background">@color/background</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#000</item>
    </style>

    <style name="Position" parent="AppTheme"></style>

    <style name="Position.LinearLayouts" parent="Position">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/back_square_white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Position.TextViews" parent="Position">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>
