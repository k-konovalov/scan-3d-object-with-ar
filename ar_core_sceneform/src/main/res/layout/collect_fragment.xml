<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragmentSceneform"
        android:name="ru.arvrlab.ar.measurement.fragments.MyArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/llTargetPos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Position.LinearLayouts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTargetXZ"
            android:text="1"
            style="@style/Position.TextViews"
             />

        <TextView
            android:id="@+id/txtTargetXY"
            android:text="2"
            style="@style/Position.TextViews"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".fragments.CollectFragment">

        <TextView
            android:id="@+id/tvAngle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDistanceAB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDistanceAC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCurrentAngleFloor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvModelAngleFloor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/photo_camera"
            app:tint="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCurrentPos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Position.LinearLayouts"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtCurrentXZ"
            android:text="1"
            style="@style/Position.TextViews"/>

        <TextView
            android:id="@+id/txtCurrentXY"
            android:text="2"
            style="@style/Position.TextViews"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>