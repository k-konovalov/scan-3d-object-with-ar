<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".ui.main.MainFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#B3FFFFFF"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pvPreview"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <EditText
            android:id="@+id/etDelayBetweenPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Delay, sec"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etNumberOfPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Photo Num"
            android:inputType="number"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnStartTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start / Stop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#B3FFFFFF"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sAutoIsoShutter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:checked="true"
            android:elevation="1dp"
            android:enabled="true"
            android:padding="0dp"
            android:paddingEnd="4dp"
            android:text="AE"
            android:textAlignment="center" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:padding="0dp"
            android:paddingEnd="4dp"
            android:text="AF"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvFrameDuration"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#803794C1"
        android:elevation="1dp"
        android:gravity="center"
        android:text="FD"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tvExposure"
        app:layout_constraintEnd_toStartOf="@+id/sbFrameDuration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/fabTakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:src="@drawable/ic_take_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/fabFirstPhoto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/ic_take_picture"
        android:text="1"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <Button
        android:id="@+id/fabLastPhoto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/ic_take_picture"
        android:text="2"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>